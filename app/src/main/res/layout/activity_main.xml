<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#CCE5FF"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNAKE ADVENTURE"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginBottom="64dp"
        android:fontFamily="sans-serif-black" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="START GAME"
        android:textSize="24sp"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:outlineAmbientShadowColor="#886200EE"
        android:outlineSpotShadowColor="#886200EE" />

    <Button
        android:id="@+id/scoreboardButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="SCOREBOARD"
        android:textSize="24sp"
        android:backgroundTint="#03DAC5"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:outlineAmbientShadowColor="#8803DAC5"
        android:outlineSpotShadowColor="#8803DAC5" />

</LinearLayout>
