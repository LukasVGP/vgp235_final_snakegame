<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/score_row_background">

    <TextView
        android:id="@+id/rankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playerNameScoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/playerDetailsScoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: 30, Country: USA"
            android:textSize="16sp"
            android:textColor="#666666" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/playerPointsScoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points: 1200"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3F51B5" />

        <TextView
            android:id="@+id/playerTimeScoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 120s"
            android:textSize="16sp"
            android:textColor="#666666" />
    </LinearLayout>

</LinearLayout>
